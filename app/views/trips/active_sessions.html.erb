<div class="container m-auto bg-white my-10 border border-grey-200 p-10">
    <h1 class="text-indigo-700">Active Sessions</h1>

    <% @active_sessions.each do |trip| %>
        <div class="flex flex-wrap items-center justify-start p-4 border-b border-grey-200 mb-6">
            <div class="flex-1 flex justify-between">
                <div>
                    <%= link_to trip.team_name, trip, class: "btn-link mr-4" %>
                </div>
                <div>
                    <%= readable_time(trip.start_time) %> &ndash;
                    <%= readable_time(trip.end_time) %>
                </div>
            </div>

            <%= link_to "Cancel Trip", trip, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-red ml-4" if admin?%>
        </div>
    <% end %>
</div>