<% if current_user.rdyForItinerary? %>
<div class="max-w-3xl my-10 m-auto">
  <div class="p-10 bg-white border border-grey-200 rounded">

    <div class="flex flex-wrap justify-between items-center mb-5">
    <h1 class="text-xl"><strong>Itinerary For <%= @itinerary.which_team %></strong></h1>
      <%= link_to "Remove Itinerary", itinerary_path(@itinerary), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-red" if admin? %>
    </div>

    <div class="border p-6 bg-grey-200 mb-5 flex items-center justify-between">
      <p class="border-2 py-3 px-4 border-yellow-600 rounded-full text-sm text-yellow-600">
        Arrival: <span class="font-bold"><%= readable_time(@itinerary.arrival) %></span>
      </p>
      <div class="border-t-2 border-indigo-200 border-dashed h-1 flex-1"></div>
      <p class="border-2 py-3 px-4 border-yellow-600 rounded-full text-sm text-yellow-600">
        Depart: <span class="font-bold"><%= readable_time(@itinerary.depart) %></span>
      </p>
    </div>

    <div class="border p-6 bg-grey-200 mb-5 items-center justify-between">
      <div class="justify-between items-center mb-5">
        <p><strong>Airline: </strong><%= @itinerary.airline %></p>
      </div>
      <div class="justify-between items-center mb-5">
        <p><strong>Flight Number: </strong><%= @itinerary.flight_number %></p>
      </div>
      <div class="justify-between items-center mb-5">
        <p><strong>Transportation: </strong><%= @itinerary.transportation %></p>
      </div>
    </div>

    <div class="border p-6 bg-grey-200 mb-5 items-center justify-between">
      <h1 class="text-xl"><strong>Team Leader Contact Info:</strong></h1>
      <br/>
      <div class="justify-between items-center mb-5">
        <p><strong>Email: </strong><%= @itinerary.user.email %></p>
      </div>
      <div class="justify-between items-center mb-5">
        <p><strong>Name: </strong><%= @itinerary.user.name %></p>
      </div>
    </div>

  </div>
</div>
<% end %>